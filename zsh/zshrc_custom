# Charger zsh-syntax-highlighting (coloration syntaxique)
# IMPORTANT: Doit Ãªtre chargÃ© en dernier parmi les plugins
if [[ -f "$HOME/.zsh/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh" ]]; then
    source "$HOME/.zsh/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh" 2>/dev/null || true
fi

# Charger zsh-completions (completions supplÃ©mentaires)
# Ajouter le rÃ©pertoire au fpath pour les completions
if [[ -d "$HOME/.zsh/zsh-completions/src" ]]; then
    fpath=("$HOME/.zsh/zsh-completions/src" $fpath)
fi

# Initialiser le systÃ¨me de complÃ©tion (une seule fois)
autoload -Uz compinit
# VÃ©rifier si compinit doit Ãªtre rÃ©exÃ©cutÃ© (si .zcompdump est plus rÃ©cent que compinit)
if [[ -n ${ZDOTDIR:-$HOME}/.zcompdump(#qN.mh+24) ]]; then
    compinit
else
    compinit -C
fi


# =============================================================================
# FIN DU CHARGEMENT
# =============================================================================
# Neofetch (si installÃ©) - dÃ©sactivÃ© pendant l'initialisation
# if command -v neofetch >/dev/null 2>&1; then
#     neofetch
# fi
# Messages dÃ©sactivÃ©s pour Ã©viter l'avertissement Powerlevel10k
