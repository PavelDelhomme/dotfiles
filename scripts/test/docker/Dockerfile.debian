# =============================================================================
# Dockerfile Debian pour tests automatisés des dotfiles
# =============================================================================
# Description: Image Docker Debian isolée pour tester les dotfiles
# Author: Paul Delhomme
# Version: 1.0
# =============================================================================

FROM debian:latest

# Variables d'environnement
ENV DOTFILES_DIR=/root/dotfiles
ENV HOME=/root
ENV TERM=xterm-256color
ENV DEBIAN_FRONTEND=noninteractive

# Installer les dépendances de base
RUN apt-get update && \
    apt-get install -y \
        git \
        curl \
        wget \
        zsh \
        bash \
        fish \
        python3 \
        python3-pip \
        build-essential \
        sudo \
        vim \
        nano \
        less \
        man-db \
        manpages \
        ca-certificates \
        && \
    rm -rf /var/lib/apt/lists/*

# Créer le répertoire dotfiles
WORKDIR /root

# Script d'initialisation pour charger les dotfiles
RUN echo '#!/bin/sh\n\
# Charger les dotfiles\n\
if [ -f "$DOTFILES_DIR/zsh/zshrc_custom" ]; then\n\
    export DOTFILES_DIR=/root/dotfiles\n\
    export DOTFILES_ZSH_PATH="$DOTFILES_DIR/zsh"\n\
    . "$DOTFILES_DIR/zsh/zshrc_custom"\n\
fi\n\
exec "$@"' > /root/entrypoint.sh && \
    chmod +x /root/entrypoint.sh

ENTRYPOINT ["/root/entrypoint.sh"]
CMD ["/bin/zsh"]

