FROM debian:latest

# Variables d'environnement
ENV DOTFILES_DIR=/root/dotfiles
ENV HOME=/root
ENV TERM=xterm-256color
ENV DEBIAN_FRONTEND=noninteractive

# Installer les dÃ©pendances de base
RUN apt-get update && \
    apt-get install -y \
        git \
        curl \
        wget \
        zsh \
        bash \
        fish \
        python3 \
        python3-pip \
        build-essential \
        sudo \
        vim \
        nano \
        less \
        man-db \
        manpages \
        ca-certificates \
        && \
    rm -rf /var/lib/apt/lists/*

# CrÃ©er le rÃ©pertoire dotfiles
WORKDIR /root

# Script d'initialisation pour charger les dotfiles
RUN printf '#!/bin/sh\n# Entrypoint pour charger les dotfiles\nexport DOTFILES_DIR=/root/dotfiles\nexport DOTFILES_ZSH_PATH="$DOTFILES_DIR/zsh"\n# Message d aide pour quitter\nif [ -t 0 ]; then\n    echo ""\n    echo "ðŸ’¡ Pour quitter le conteneur: tapez exit ou appuyez sur Ctrl+D"\n    echo ""\nfi\nexec "$@"\n' > /root/entrypoint.sh && \
    chmod +x /root/entrypoint.sh

ENTRYPOINT ["/root/entrypoint.sh"]
CMD ["/bin/zsh"]

