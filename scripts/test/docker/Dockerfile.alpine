# =============================================================================
# Dockerfile Alpine pour tests automatisés des dotfiles
# =============================================================================
# Description: Image Docker Alpine isolée pour tester les dotfiles
# Author: Paul Delhomme
# Version: 1.0
# =============================================================================

FROM alpine:latest

# Variables d'environnement
ENV DOTFILES_DIR=/root/dotfiles
ENV HOME=/root
ENV TERM=xterm-256color

# Installer les dépendances de base
RUN apk update && \
    apk add --no-cache \
        git \
        curl \
        wget \
        bash \
        zsh \
        fish \
        python3 \
        py3-pip \
        build-base \
        sudo \
        vim \
        nano \
        less \
        man-pages \
        ca-certificates \
        && \
    rm -rf /var/cache/apk/*

# Créer le répertoire dotfiles
WORKDIR /root

# Script d'initialisation pour charger les dotfiles
# Utiliser bash si disponible, sinon sh (mais éviter de charger zshrc_custom dans sh)
RUN printf '#!/bin/sh\n# Charger les dotfiles\nif [ -f "$DOTFILES_DIR/zsh/zshrc_custom" ] && command -v zsh >/dev/null 2>&1; then\n    export DOTFILES_DIR=/root/dotfiles\n    export DOTFILES_ZSH_PATH="$DOTFILES_DIR/zsh"\n    # Charger uniquement dans zsh, pas dans sh\n    if [ -n "$ZSH_VERSION" ] || [ "$1" = "/bin/zsh" ]; then\n        exec /bin/zsh -c ". $DOTFILES_DIR/zsh/zshrc_custom; exec zsh"\n    fi\nfi\nexec "$@"\n' > /root/entrypoint.sh && \
    chmod +x /root/entrypoint.sh

ENTRYPOINT ["/root/entrypoint.sh"]
CMD ["/bin/zsh"]

