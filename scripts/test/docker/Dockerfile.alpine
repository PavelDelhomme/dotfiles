FROM alpine:latest

# Variables d'environnement
ENV DOTFILES_DIR=/root/dotfiles
ENV HOME=/root
ENV TERM=xterm-256color

# Installer les dÃ©pendances de base
RUN apk update && \
    apk add --no-cache \
        git \
        curl \
        wget \
        bash \
        zsh \
        fish \
        python3 \
        py3-pip \
        build-base \
        sudo \
        vim \
        nano \
        less \
        man-pages \
        ca-certificates \
        && \
    rm -rf /var/cache/apk/*

# CrÃ©er le rÃ©pertoire dotfiles
WORKDIR /root

# Script d'initialisation pour charger les dotfiles
# Ne pas charger zshrc_custom dans l'entrypoint (il utilise typeset qui n'existe pas dans sh)
# Le shell (zsh/bash) chargera automatiquement zshrc_custom via son fichier de config
RUN printf '#!/bin/sh\n# Entrypoint simple - ne pas charger zshrc_custom ici\n# zshrc_custom sera chargÃ© automatiquement par zsh via .zshrc\n# ou manuellement si nÃ©cessaire\nexport DOTFILES_DIR=/root/dotfiles\nexport DOTFILES_ZSH_PATH="$DOTFILES_DIR/zsh"\n# Message d'\''aide pour quitter\nif [ -t 0 ]; then\n    echo ""\n    echo "ðŸ’¡ Pour quitter le conteneur: tapez '\''exit'\'' ou appuyez sur Ctrl+D"\n    echo ""\nfi\nexec "$@"\n' > /root/entrypoint.sh && \
    chmod +x /root/entrypoint.sh

ENTRYPOINT ["/root/entrypoint.sh"]
CMD ["/bin/zsh"]

