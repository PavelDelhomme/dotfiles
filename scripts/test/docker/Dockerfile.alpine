# =============================================================================
# Dockerfile Alpine pour tests automatisés des dotfiles
# =============================================================================
# Description: Image Docker Alpine isolée pour tester les dotfiles
# Author: Paul Delhomme
# Version: 1.0
# =============================================================================

FROM alpine:latest

# Variables d'environnement
ENV DOTFILES_DIR=/root/dotfiles
ENV HOME=/root
ENV TERM=xterm-256color

# Installer les dépendances de base
RUN apk update && \
    apk add --no-cache \
        git \
        curl \
        wget \
        bash \
        zsh \
        fish \
        python3 \
        py3-pip \
        build-base \
        sudo \
        vim \
        nano \
        less \
        man-pages \
        ca-certificates \
        && \
    rm -rf /var/cache/apk/*

# Créer le répertoire dotfiles
WORKDIR /root

# Script d'initialisation pour charger les dotfiles
# Ne pas charger zshrc_custom dans l'entrypoint (il utilise typeset qui n'existe pas dans sh)
# Le shell (zsh/bash) chargera automatiquement zshrc_custom via son fichier de config
RUN printf '#!/bin/sh\n# Entrypoint simple - ne pas charger zshrc_custom ici\n# zshrc_custom sera chargé automatiquement par zsh via .zshrc\n# ou manuellement si nécessaire\nexport DOTFILES_DIR=/root/dotfiles\nexport DOTFILES_ZSH_PATH="$DOTFILES_DIR/zsh"\nexec "$@"\n' > /root/entrypoint.sh && \
    chmod +x /root/entrypoint.sh

ENTRYPOINT ["/root/entrypoint.sh"]
CMD ["/bin/zsh"]

