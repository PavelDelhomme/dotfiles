FROM archlinux:latest

# Variables d'environnement
ENV DOTFILES_DIR=/root/dotfiles
ENV HOME=/root
ENV TERM=xterm-256color

# Installer les dÃ©pendances de base
RUN pacman -Syu --noconfirm && \
    pacman -S --noconfirm \
        base-devel \
        git \
        zsh \
        bash \
        fish \
        python \
        python-pip \
        awk \
        sed \
        grep \
        findutils \
        coreutils \
        which \
        jq \
        curl \
        wget \
        vim \
        nano \
        less \
        man-db \
        man-pages \
        && \
    rm -rf /var/cache/pacman/pkg/*

# CrÃ©er le rÃ©pertoire dotfiles
WORKDIR /root

# Copier les dotfiles (sera montÃ© en volume en lecture seule)
# Cette Ã©tape permet de valider la structure
COPY . /root/dotfiles

# Copier le script de test
COPY scripts/test/docker/run_tests.sh /root/run_tests.sh
RUN chmod +x /root/run_tests.sh

# Configurer ZSH comme shell par dÃ©faut
RUN chsh -s /bin/zsh root

# CrÃ©er les rÃ©pertoires nÃ©cessaires
RUN mkdir -p /root/.config /root/.local/share /root/.cache

# Script d'initialisation pour charger les dotfiles
RUN printf '#!/bin/sh\n# Entrypoint pour charger les dotfiles\nexport DOTFILES_DIR=/root/dotfiles\nexport DOTFILES_ZSH_PATH="$DOTFILES_DIR/zsh"\n# Message d aide pour quitter\nif [ -t 0 ]; then\n    echo ""\n    echo "ðŸ’¡ Pour quitter le conteneur: tapez exit ou appuyez sur Ctrl+D"\n    echo ""\nfi\nexec "$@"\n' > /root/entrypoint.sh && \
    chmod +x /root/entrypoint.sh

ENTRYPOINT ["/root/entrypoint.sh"]
CMD ["/bin/zsh"]

