FROM gentoo/stage3:latest

# Variables d'environnement
ENV DOTFILES_DIR=/root/dotfiles
ENV HOME=/root
ENV TERM=xterm-256color

# Installer les dÃ©pendances de base (Gentoo utilise emerge)
# Note: Gentoo compile depuis les sources, ce qui peut prendre beaucoup de temps
# Utilisation de --binpkg-respect-use pour utiliser des binaires prÃ©-compilÃ©s si disponibles
RUN emerge --sync --quiet && \
    # DÃ©sactiver les sandbox features pour Docker (Ã©vite les erreurs EPERM)
    FEATURES="-pid-sandbox -ipc-sandbox -network-sandbox" emerge --binpkg-respect-use=y -q \
        dev-vcs/git \
        net-misc/curl \
        net-misc/wget \
        app-shells/zsh \
        app-shells/bash \
        app-shells/fish \
        dev-lang/python \
        sys-devel/gcc \
        app-editors/vim \
        app-editors/nano \
        sys-apps/less \
        sys-apps/man-db \
        app-misc/ca-certificates \
        && \
    rm -rf /var/cache/distfiles/*

# CrÃ©er le rÃ©pertoire dotfiles
WORKDIR /root

# Script d'initialisation pour charger les dotfiles
RUN printf '#!/bin/sh\n# Entrypoint pour charger les dotfiles\nexport DOTFILES_DIR=/root/dotfiles\nexport DOTFILES_ZSH_PATH="$DOTFILES_DIR/zsh"\n# Message d aide pour quitter\nif [ -t 0 ]; then\n    echo ""\n    echo "ðŸ’¡ Pour quitter le conteneur: tapez exit ou appuyez sur Ctrl+D"\n    echo ""\nfi\nexec "$@"\n' > /root/entrypoint.sh && \
    chmod +x /root/entrypoint.sh

ENTRYPOINT ["/root/entrypoint.sh"]
CMD ["/bin/zsh"]

