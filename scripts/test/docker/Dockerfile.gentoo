# =============================================================================
# Dockerfile Gentoo pour tests automatisés des dotfiles
# =============================================================================
# Description: Image Docker Gentoo isolée pour tester les dotfiles
# Author: Paul Delhomme
# Version: 1.0
# =============================================================================

FROM gentoo/stage3:latest

# Variables d'environnement
ENV DOTFILES_DIR=/root/dotfiles
ENV HOME=/root
ENV TERM=xterm-256color

# Installer les dépendances de base (Gentoo utilise emerge)
RUN emerge --sync --quiet && \
    emerge -q \
        dev-vcs/git \
        net-misc/curl \
        net-misc/wget \
        app-shells/zsh \
        app-shells/bash \
        app-shells/fish \
        dev-lang/python \
        sys-devel/gcc \
        app-editors/vim \
        app-editors/nano \
        sys-apps/less \
        sys-apps/man-db \
        app-misc/ca-certificates \
        && \
    rm -rf /var/cache/distfiles/*

# Créer le répertoire dotfiles
WORKDIR /root

# Script d'initialisation pour charger les dotfiles
RUN echo '#!/bin/sh\n\
# Charger les dotfiles\n\
if [ -f "$DOTFILES_DIR/zsh/zshrc_custom" ]; then\n\
    export DOTFILES_DIR=/root/dotfiles\n\
    export DOTFILES_ZSH_PATH="$DOTFILES_DIR/zsh"\n\
    . "$DOTFILES_DIR/zsh/zshrc_custom"\n\
fi\n\
exec "$@"' > /root/entrypoint.sh && \
    chmod +x /root/entrypoint.sh

ENTRYPOINT ["/root/entrypoint.sh"]
CMD ["/bin/zsh"]

